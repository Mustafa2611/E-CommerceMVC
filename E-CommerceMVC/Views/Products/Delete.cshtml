@using E_CommerceMVC.ViewModels.Products
@model DeleteProductFormViewModel


<h5>Delete Product</h5>


<form asp-controller="Product" >
    <div class="row">
        <div class="col-md-6">
            <label asp-for="ProductId" class="form-label mt-4"></label>
            <select class="form-select" asp-for="ProductId" asp-items="Model.Products">
                <option></option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
          
        </div>
        <button type="submit" class="btn btn-light text-black mt-4" asp-action="Delete">
            Delete
        </button>
        <div class="col-md-6"></div>
    </div>

</form>